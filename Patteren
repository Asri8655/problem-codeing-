#include <stdio.h>
int main()
{
    int a,i,j;
    scanf("%d",&a);
    if(a>2&&a<20)
    {
        for(i=0;i<a;i++)
        {
            for(j=a-1;j>=i;j--)
                printf(" ");
                  for(j=0;j<=i;j++)
                    printf("* ");
                      printf("\n");
        } 
                for(i=1;i<a;i++)
                {
                    for(j=0;j<=i;j++)
                       printf(" ");
                         for(j=a-1;j>=i;j--)
                           printf("* ");
                 printf("\n"); 
                }
    }
    
}
