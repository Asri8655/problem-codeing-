#include <stdio.h>

int main()
{
    int a,i,j;
    scanf("%d",&a);
    for(i=a;i>0;i--)
    {
        for(j=1;j<=a;j++)
        {
            if(i==j||i<j)
            {
                printf("*");
            }
            else
            {
                printf(" ");
            }
        }
        printf("\n");
    }
    for(i=1;i<=a;i++)
    {
        for(j=1;j<=a;j++)
        {
            if(i<j)
            {
                printf("*");
            }
            else
            {
                printf(" ");
            }
        }
        printf("\n");
    }
}
